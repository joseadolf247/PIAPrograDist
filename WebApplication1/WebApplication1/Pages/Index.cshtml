<!-- JavaScript para el Carrusel -->
<script>
    const carouselRow = document.getElementById('carouselRow');
    const prevBtn = document.getElementById('prevBtn');
    const nextBtn = document.getElementById('nextBtn');
    let currentIndex = 0;
    const itemsToShow = 4; // Número de productos visibles
    const totalItems = carouselRow.querySelectorAll('.col-md-3').length;

    prevBtn.addEventListener('click', () => {
        if (currentIndex > 0) {
            currentIndex--;
            updateCarousel();
        }
    });

    nextBtn.addEventListener('click', () => {
        if ((currentIndex + 1) * itemsToShow < totalItems) {
            currentIndex++;
            updateCarousel();
        }
    });

    function updateCarousel() {
        const offset = -currentIndex * 100; // Mueve el carrusel en múltiplos de 100% para mostrar los siguientes productos
        carouselRow.style.transform = `translateX(${offset}%)`;
    }
</script>

