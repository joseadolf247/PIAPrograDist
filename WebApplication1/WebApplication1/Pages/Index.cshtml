<!-- CSS para el Carrusel -->
<style>
    .carousel-container {
        overflow: hidden;
        position: relative;
        width: 100%;
    }

    .carousel-row {
        display: flex;
        transition: transform 0.5s ease-in-out;
        width: fit-content;
    }

    .col-md-3 {
        flex: 0 0 25%; /* Hace que cada producto ocupe 25% del contenedor */
        max-width: 25%;
    }

    .carousel-btn {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        background-color: rgba(0, 0, 0, 0.5);
        color: white;
        border: none;
        padding: 10px;
        cursor: pointer;
        z-index: 1;
    }

        .carousel-btn.prev {
            left: 0;
        }

        .carousel-btn.next {
            right: 0;
        }
</style>

<!-- JavaScript para el Carrusel -->
<script>
    const carouselRow = document.getElementById('carouselRow');
    const prevBtn = document.getElementById('prevBtn');
    const nextBtn = document.getElementById('nextBtn');
    let currentIndex = 0;
    const itemsToShow = 4; // Número de productos visibles
    const totalItems = carouselRow.querySelectorAll('.col-md-3').length;

    prevBtn.addEventListener('click', () => {
        if (currentIndex > 0) {
            currentIndex--;
            updateCarousel();
        }
    });

    nextBtn.addEventListener('click', () => {
        if ((currentIndex + 1) * itemsToShow < totalItems) {
            currentIndex++;
            updateCarousel();
        }
    });

    function updateCarousel() {
        const offset = -currentIndex * 100; // Mueve el carrusel en múltiplos de 100% para mostrar los siguientes productos
        carouselRow.style.transform = `translateX(${offset}%)`;
    }
</script>

