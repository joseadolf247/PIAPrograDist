@page
@model WebApplication1.Pages.Mangas.HxHModel
@{
    ViewData["Title"] = "Detalles del Manga";
}

<head>
    <link rel="stylesheet" href="~/css/Vistas.css" />
</head>

<div class="container mt-5">
    <!-- Contenedor de la fila para los detalles del manga -->
    <div class="row">
        <!-- Imagen del Manga -->
        <div class="col-md-4">
            <img src="https://m.media-amazon.com/images/I/815uHbvvu1L._AC_UF1000,1000_QL80_.jpg"
                 alt="Hunter X Hunter" class="img-fluid rounded shadow-lg border border-secondary manga-image">
        </div>

        <!-- Información del Manga -->
        <div class="col-md-8">
            <h3 class="manga-title" style="font-size: 30px; font-weight: bold; color: #34495e;">Hunter X Hunter</h3><br />
            <p class="manga-author" style="font-size: 18px; color: #7f8c8d;"><strong>Autor:</strong> Yoshihiro Togashi</p><br />
            <p class="manga-rating" style="font-size: 18px; color: #f39c12;"><strong>Calificación:</strong> ⭐ 4.9</p><br />
            <p class="manga-year" style="font-size: 18px; color: #7f8c8d;"><strong>Año de publicación:</strong> 1998</p><br />
            <p class="manga-status" style="font-size: 18px; color: #7f8c8d;"><strong>Estado:</strong> En emisión</p><br />
            <p class="manga-synopsis" style="font-size: 18px; line-height: 1.6; color: #2c3e50;">
                <strong>Sinopsis:</strong> Gon Freecss es un joven que aspira a convertirse en cazador, un miembro de élite con habilidades extraordinarias. En su camino se enfrenta a desafíos que lo llevarán a descubrir secretos sobre su padre y a enfrentar poderosos enemigos. La historia es un viaje de autodescubrimiento, amistad y crecimiento.
            </p><br />

            <!-- Botón para ver más detalles -->
            <a href="https://www.youtube.com/watch?v=G_0w2hGNqBQ&pp=ygUXcmVzdW1lbiBodW50ZXIgeCBodW50ZXI%3D" class="btn btn-primary mt-3 manga-button">Conocer más detalles</a>

            <!-- Botón para regresar -->
            <button onclick="window.history.back();" class="btn btn-secondary mt-3 manga-button">Regresar</button>
        </div>
    </div>
</div>
