@page
@model WebApplication1.Pages.VistasModel
@{
    ViewData["Title"] = "Detalles del Manga";
}

<head>
    <link rel="stylesheet" href="~/css/Vistas.css" />
</head>

<div class="container mt-5 manga-details">
    <!-- Contenedor de la fila para los detalles del manga -->
    <div class="row">
        <!-- Imagen del Manga -->
        <div class="col-md-4">
            <img src="https://cmsapi-frontend.naruto-official.com/site/api/naruto/Image/get?path=/naruto/jp/comics/2022/09/29/Vk3QmOjeOkcGbzps/cover.jpg"
                 alt="Naruto" class="img-fluid rounded shadow-lg border border-secondary manga-image">
        </div>

        <!-- Información del Manga -->
        <div class="col-md-8">
            <h3 class="manga-title" style="font-size: 30px; font-weight: bold; color: #34495e;">Naruto</h3><br />
            <p class="manga-author" style="font-size: 18px; color: #7f8c8d;"><strong>Autor:</strong> Masashi Kishimoto</p><br />
            <p class="manga-rating" style="font-size: 18px; color: #f39c12;"><strong>Calificación:</strong> ⭐ 4.8</p><br />
            <p class="manga-year" style="font-size: 18px; color: #7f8c8d;"><strong>Año de publicación:</strong> 1999</p><br />
            <p class="manga-status" style="font-size: 18px; color: #7f8c8d;"><strong>Estado:</strong> Finalizado</p><br />
            <p class="manga-synopsis" style="font-size: 18px; line-height: 1.6; color: #2c3e50;">
                <strong>Sinopsis:</strong> Naruto Uzumaki es un joven ninja con el sueño de convertirse en el líder de su aldea. A lo largo de su viaje, enfrenta diversos desafíos y forma fuertes lazos con sus compañeros. La historia sigue su evolución, mientras se enfrenta a las sombras de su pasado y busca alcanzar su meta.
            </p><br />

            <!-- Botón para ver más detalles -->
            <a href="https://www.youtube.com/watch?v=sgkJEFIL02g" class="btn btn-primary mt-3 manga-button">Conocer más detalles</a>

            <!-- Botón para regresar -->
            <button onclick="window.history.back();" class="btn btn-secondary mt-3 manga-button">Regresar</button>
        </div>
    </div>
</div>
