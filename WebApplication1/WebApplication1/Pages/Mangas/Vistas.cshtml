@page
@model WebApplication1.Pages.VistasModel
@{
    ViewData["Title"] = "Detalles del Manga";
}

<head>
    <link rel="stylesheet" href="~/css/Vistas.css" />
</head>

<div class="container mt-5 manga-details">
    <!-- Contenedor de la fila para los detalles del manga -->
    <div class="row">
        <!-- Imagen del Manga -->
        <div class="col-md-4">
            <img src="https://cmsapi-frontend.naruto-official.com/site/api/naruto/Image/get?path=/naruto/jp/comics/2022/09/29/Vk3QmOjeOkcGbzps/cover.jpg"
                 alt="Naruto" class="img-fluid rounded shadow-lg border border-secondary manga-image">
        </div>

        <!-- Información del Manga -->
        <div class="col-md-8">
            <!-- Título con fondo oscuro -->
            <div class="title-background" style="background-color: rgba(0, 0, 0, 0.7); padding: 15px; border-radius: 8px; margin-bottom: 20px;">
                <h3 class="manga-title" style="font-size: 36px; font-weight: bold; color: #ffffff; text-align: center;">Naruto</h3>
            </div>

            <!-- Fondo oscuro semitransparente para la información -->
            <div class="info-background" style="background-color: rgba(0, 0, 0, 0.6); padding: 20px; border-radius: 8px;">
                <p class="manga-author" style="font-size: 18px; color: #f1f1f1;"><strong>Autor:</strong> Masashi Kishimoto</p><br />
                <p class="manga-rating" style="font-size: 18px; color: #f39c12;"><strong>Calificación:</strong> ⭐ 4.8</p><br />
                <p class="manga-year" style="font-size: 18px; color: #f1f1f1;"><strong>Año de publicación:</strong> 1999</p><br />
                <p class="manga-status" style="font-size: 18px; color: #f1f1f1;"><strong>Estado:</strong> Finalizado</p><br />
                <p class="manga-synopsis" style="font-size: 20px; line-height: 1.8; color: #f1f1f1;">
                    <strong>Sinopsis:</strong> Naruto Uzumaki es un joven ninja con el sueño de convertirse en el líder de su aldea. A lo largo de su viaje, enfrenta diversos desafíos y forma fuertes lazos con sus compañeros. La historia sigue su evolución, mientras se enfrenta a las sombras de su pasado y busca alcanzar su meta.
                </p><br />
            </div>

            <!-- Botón para ver más detalles -->
            <a href="https://www.youtube.com/watch?v=sgkJEFIL02g" class="btn btn-primary mt-3" style="font-size: 18px; padding: 12px 24px; border-radius: 8px; background-color: #2980b9; border-color: #2980b9;">
                Conocer más detalles
            </a>

            <!-- Botón para regresar -->
            <button onclick="window.history.back();" class="btn btn-secondary mt-3 manga-button" style="font-size: 18px; padding: 12px 24px; border-radius: 8px;">
                Regresar
            </button>

            <!-- Tabla de Volúmenes Disponibles -->
            <div class="mt-5">
                <h4 style="font-size: 24px; font-weight: bold; color: #34495e; text-align: center;">Volúmenes disponibles:</h4>
                <div class="table-responsive">
                    <table class="table table-striped table-hover table-bordered mt-3" style="background-color: #f9f9f9; border-radius: 8px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
                        <thead class="thead-dark">
                            <tr>
                                <th>Volumen</th>
                                <th>Enlace</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="font-weight-bold">Naruto Gold Edition 01</td>
                                <td><a href="/Vistas/Vol1Na" class="btn btn-link" style="font-size: 18px; text-decoration: none;">Ver Volumen 1</a></td>
                            </tr>
                            <tr>
                                <td class="font-weight-bold">Naruto Gold Edition 02</td>
                                <td><a href="/Vistas/Vol2Na" class="btn btn-link" style="font-size: 18px; text-decoration: none;">Ver Volumen 2</a></td>
                            </tr>
                            <tr>
                                <td class="font-weight-bold">Naruto Gold Edition 03</td>
                                <td><a href="/Vistas/Vol3Na" class="btn btn-link" style="font-size: 18px; text-decoration: none;">Ver Volumen 3</a></td>
                            </tr>
                            <tr>
                                <td class="font-weight-bold">Naruto Gold Edition 04</td>
                                <td><a href="/Vistas/Vol4Na" class="btn btn-link" style="font-size: 18px; text-decoration: none;">Ver Volumen 4</a></td>
                            </tr>
                            <!-- Agregar más volúmenes aquí si es necesario -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
