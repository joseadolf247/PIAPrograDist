<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MangaStore</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Directorio.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Vistas.css" />
    <style>
        /* Custom styles for the navbar */
        .navbar {
            background-color: #343a40;
            padding: 15px 0;
            font-size: 1.1em;
        }

        .navbar-brand {
            font-weight: bold;
            font-size: 1.4em;
            color: #ff6b6b;
        }

            .navbar-brand:hover {
                color: #ffffff;
            }

        .nav-link {
            color: #f8f9fa !important;
            margin-right: 15px;
            transition: color 0.3s;
        }

            .nav-link:hover {
                color: #ff6b6b !important;
            }

        .navbar .nav-item .cart-icon {
            width: 24px;
            height: 24px;
            filter: invert(100%);
        }

        .navbar-nav .nav-item:last-child {
            margin-left: 15px;
        }

        /* Fixed navbar on scroll */
        body {
            padding-top: 80px;
        }
    </style>
</head>
<body>
    <header>
        <!-- Navbar -->
        <nav class="navbar navbar-expand-lg navbar-dark fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand" href="/Index">MangaStore</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="/directorio">Directorio de Mangas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/acceso">Acceso</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/registro">Registrarse</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/carrito">
                                <img src="https://img.icons8.com/ios-filled/50/ffffff/shopping-cart.png" alt="Carrito" class="cart-icon">
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="bg-dark text-white mt-5 p-4 text-center">
        <p>&copy; 2024 MangaStore. Todos los derechos reservados.</p>
    </footer>


    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
