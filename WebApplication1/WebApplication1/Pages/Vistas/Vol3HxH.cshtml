@page
@model WebApplication1.Pages.Vistas.Vol3HxHModel
@{
    ViewData["Title"] = "Detalles del Volumen - Hunter x Hunter";
}

<head>
    <link rel="stylesheet" href="~/css/Volumen.css" />
</head>

<div class="container mt-5 volume-details">
    <!-- Contenedor de la fila para los detalles del volumen -->
    <div class="row">
        <!-- Imagen del Volumen -->
        <div class="col-md-4">
            <img src="https://m.media-amazon.com/images/I/81049wToL4L._AC_UF1000,1000_QL80_.jpg" alt="Hunter x Hunter Volumen 3" class="img-fluid rounded shadow-lg border border-secondary volume-image">
        </div>

        <!-- Información del Volumen -->
        <div class="col-md-8">
            <!-- Título con fondo oscuro -->
            <div class="title-background" style="background-color: rgba(0, 0, 0, 0.7); padding: 15px; border-radius: 8px; margin-bottom: 20px;">
                <h3 class="volume-title" style="font-size: 36px; font-weight: bold; color: #ffffff; text-align: center;">Hunter x Hunter - Volumen 3</h3>
            </div>

            <!-- Fondo oscuro semitransparente para la sinopsis -->
            <div class="synopsis-background" style="background-color: rgba(0, 0, 0, 0.6); padding: 20px; border-radius: 8px;">
                <p class="volume-synopsis" style="font-size: 20px; line-height: 1.8; color: #f1f1f1;">
                    <strong>Sinopsis:</strong> Gon, Killua, Leorio y Kurapika continúan su travesía tras completar el examen. En este volumen, los personajes enfrentan nuevos desafíos fuera del examen, pero también comienzan a comprender las implicaciones más profundas del mundo de los cazadores. A medida que Gon se acerca a su objetivo de encontrar a su padre, sus nuevos amigos comienzan a lidiar con sus propios problemas personales y motivaciones.
                </p>
            </div><br />

            <!-- Botón más grande para regresar a la página anterior -->
            <a href="javascript:history.back()" class="btn btn-secondary mt-4" style="font-size: 18px; padding: 12px 24px;">Regresar</a>
        </div>
    </div>
</div>
