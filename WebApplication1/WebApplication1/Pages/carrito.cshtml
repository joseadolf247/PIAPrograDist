@page
@model WebApplication1.Pages.carritoModel
@{
    ViewData["Title"] = "Carrito";
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Carrito de Compras</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .custom-rounded {
            border-radius: 15px;
        }
        .product-img {
            width: 80px;
            height: auto;
        }
    </style>
</head>
<body class="bg-light">

    <div class="container mt-5">
        <h2 class="text-center mb-4">Carrito de Compras</h2>

        <div class="row">
            <div class="col-md-8">
                <div class="card custom-rounded mb-3">
                    <div class="card-body">
                        <!-- Producto 1 -->
                        <div class="row align-items-center mb-3">
                            <div class="col-2">
                                <img src="https://cdnx.jumpseller.com/mangabreria/image/31460237/resize/610/610?1675377088" class="product-img" alt="Producto 1">
                            </div>
                            <div class="col-4">
                                <h5>NARUTO-GOLD EDITION 03</h5>
                            </div>
                            <div class="col-2">
                                <p class="mb-0">$239.00 MXN</p>
                            </div>
                            <div class="col-2">
                                <input type="number" class="form-control custom-rounded" value="1">
                            </div>
                            <div class="col-2 text-end">
                                <button class="btn btn-danger custom-rounded">Eliminar</button>
                            </div>
                        </div>

                        <!-- Producto 2 -->
                        <div class="row align-items-center mb-3">
                            <div class="col-2">
                                <img src="https://cdnx.jumpseller.com/mangabreria/image/33001614/resize/610/610?1678390362" class="product-img" alt="Producto 2">
                            </div>
                            <div class="col-4">
                                <h5>NARUTO-GOLD EDITION 04</h5>
                            </div>
                            <div class="col-2">
                                <p class="mb-0">$259.00 MXN</p>
                            </div>
                            <div class="col-2">
                                <input type="number" class="form-control custom-rounded" value="2">
                            </div>
                            <div class="col-2 text-end">
                                <button class="btn btn-danger custom-rounded">Eliminar</button>
                            </div>
                        </div>

                        <!-- Producto 3 -->
                        <div class="row align-items-center">
                            <div class="col-2">
                                <img src="https://cdnx.jumpseller.com/mangabreria/image/27278288/resize/610/610?1663795600" class="product-img" alt="Producto 3">
                            </div>
                            <div class="col-4">
                                <h5>NARUTO-GOLD EDITION 01</h5>
                            </div>
                            <div class="col-2">
                                <p class="mb-0">$229.00 MXN</p>
                            </div>
                            <div class="col-2">
                                <input type="number" class="form-control custom-rounded" value="1">
                            </div>
                            <div class="col-2 text-end">
                                <button class="btn btn-danger custom-rounded">Eliminar</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Resumen de Compra -->
            <div class="col-md-4">
                <div class="card custom-rounded">
                    <div class="card-body">
                        <h4>Resumen de Compra</h4>
                        <hr>
                        <div class="d-flex justify-content-between">
                            <span>Subtotal:</span>
                            <span>$537.00 MXN</span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <span>Envío:</span>
                            <span>$50.00 MXN</span>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between">
                            <strong>Total:</strong>
                            <strong>$587.00 MXN</strong>
                        </div>
                        <button class="btn btn-success btn-block mt-4 custom-pill">Proceder al Pago</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>