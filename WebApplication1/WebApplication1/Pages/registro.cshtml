@page
@model WebApplication1.Pages.RegistroModel
@{
    ViewData["Title"] = "Registro";
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Registro</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .custom-rounded {
            border-radius: 15px;
        }

        .custom-pill {
            border-radius: 50px;
        }
    </style>
</head>
<body class="bg-light">

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card custom-rounded shadow">
                    <div class="card-header bg-dark text-white text-center custom-rounded">
                        <h3>Registrarse</h3>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <div class="form-group mb-3">
                                <label for="Nombre">Nombre</label>
                                <input asp-for="Clientes.Nombre" class="form-control custom-rounded" id="Nombre" required />
                            </div>
                            <div class="form-group mb-3">
                                <label for="Correo">Correo Electrónico</label>
                                <input asp-for="Clientes.Correo" class="form-control custom-rounded" id="Correo" required />
                            </div>
                            <div class="form-group mb-3">
                                <label for="Contraseña">Contraseña</label>
                                <input asp-for="Clientes.Contraseña" type="password" class="form-control custom-rounded" id="Contraseña" required />
                            </div>
                            <div class="form-group mb-3">
                                <label for="confirmPassword">Confirmar Contraseña</label>
                                <input type="password" class="form-control custom-rounded" id="confirmPassword" name="confirmPassword" required />
                            </div>
                            <center>
                                <button type="submit" class="btn btn-danger btn-block custom-pill">Registrarse</button>
                            </center>
                        </form>
                    </div>
                    <div class="card-footer text-center custom-rounded">
                        <a href="/acceso" class="text-success">¿Ya tienes una cuenta? Inicia sesión aquí</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>